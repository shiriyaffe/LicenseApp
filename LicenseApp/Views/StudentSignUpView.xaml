<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LicenseApp.Views.StudentSignUpView"
             FlowDirection="RightToLeft">
    <ContentPage.Content>
        <StackLayout Padding="40" VerticalOptions="CenterAndExpand">
            <Frame BorderColor="DarkGray" HorizontalOptions="Center" BackgroundColor="Transparent" WidthRequest="250" HeightRequest="40" Padding="10">
                <Picker Title="עיר" FontAttributes="Bold" ItemsSource="{Binding Cities}" ItemDisplayBinding="{Binding Name}" SelectedItem="{Binding City}">
                    
                </Picker>
            </Frame>
            <Frame BorderColor="DarkGray" HorizontalOptions="Center" BackgroundColor="Transparent" WidthRequest="250" HeightRequest="40" Padding="10" >
                <Entry Placeholder="כתובת" Text="{Binding Address}"/>
            </Frame>
            <Frame BorderColor="DarkGray" HorizontalOptions="Center" BackgroundColor="Transparent" WidthRequest="250" HeightRequest="40" Padding="10">
                <Picker Title="תיבת הילוכים">
                    <Picker.Items>
                        
                    </Picker.Items>
                </Picker>
            </Frame>
            <Frame BorderColor="DarkGray" HorizontalOptions="Center" BackgroundColor="Transparent" WidthRequest="250" HeightRequest="40" Padding="10">
                <Picker Title="סוג רישיון">
                    <Picker.Items>
                        
                    </Picker.Items>
                </Picker>
            </Frame>
            <Frame BorderColor="DarkGray" HorizontalOptions="Center" BackgroundColor="Transparent" WidthRequest="250" HeightRequest="40" Padding="10">
                <Picker Title="מין מועדף למורה">
                    <Picker.Items>

                    </Picker.Items>
                </Picker>
            </Frame>
            <Label/>
            <Slider Minimum="0" Maximum="500" ThumbColor="LightBlue" MaximumTrackColor="Gray" MinimumTrackColor="LightBlue"/>
            <Label/>
            <Button Text="שלח" HorizontalOptions="Center" Padding="0" FontSize="20" FontAttributes="Bold" Command="{Binding SignUpCommand}" BackgroundColor="LightGray" CornerRadius="10" TextColor="Black"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>